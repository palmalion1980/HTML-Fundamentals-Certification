    //- Capitalize
    const Capitalize = (string) => {
        return string
                .split(' ')
                .map(word =>
                        word.charAt(0).toUpperCase() +     // primera letra en mayúscula
                        word.slice(1).toLowerCase()        // el resto en minúscula
                )
                .join(' ');
    };

    //- Convert_URL('Javascript ® Fundamentals') -> javascript-fundamentals
    const Convert_URL = (string) => {
        return string
            .replace(/ \/ /g, '-')
            .replace(/\./g, '')
            .replace(/[, ]+/g, ' ')
            .replace(/\//g, '-')
            .trim()
            .split(' ').join('-')
            .toLowerCase()
            .normalize('NFD')
            .replace(/[\u0300-\u036f]/g, '');
    };


    //- Format_PhoneNumber('+56995019987') -> +56 (9) 5001-9987
    const Format_PhoneNumber = (phoneNumber) => {
        const cleanNumber = phoneNumber.replace(/\D/g, '');
        if (cleanNumber.length === 11 && cleanNumber.startsWith('56')) {
            const [countryCode, mobilePrefix, firstPart, secondPart] = [
                cleanNumber.slice(0, 2),
                cleanNumber.slice(2, 3),
                cleanNumber.slice(3, 7),
                cleanNumber.slice(7)
            ];
            return `+${countryCode} (${mobilePrefix}) ${firstPart}-${secondPart}`;
        } else {
            return 'Número no válido';
        }
    };



    //- Format_USD('10000') -> USD 10.000
    const Format_USD = (amount) => {
        const numeric = Number(amount);
        if (isNaN(numeric)) return 'USD 0,00'; // Manejo de errores para valores no numéricos
        return `USD ${numeric.toLocaleString('es-ES', {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2
        })}`;
    };


    //- Format_CLP('10000') -> $10.000 CLP
    const Format_CLP = (amount) => {
        const numeric = Number(amount);
        if (isNaN(numeric)) return '$0 CLP'; // Manejo de errores para valores no numéricos
        return `$${numeric.toLocaleString('es-CL')} CLP`;
    };


